<!-- Validation failure messages -->
<% if @photos_of_recipe.errors.any? %>
  <% @photos_of_recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Photos Of Recipe #<%= @photos_of_recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_photos_of_recipe/<%= @photos_of_recipe.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="control-label">
          Recipe
        </label>

        <%= select_tag(:recipe_id, options_from_collection_for_select(Recipe.all, :id, :post_id, @photos_of_recipe.recipe_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Photos Of Recipe
      </button>
      or
      <a href="/photos_of_recipes/<%= @photos_of_recipe.id %>">Cancel</a>
    </form>
  </div>
</div>
