<div class="page-header">
  <h3>Profile #<%= @profile.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @profile.user.present? %>
          <a href="/users/<%= @profile.user_id %>">
            <%= @profile.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>User photo</dt>
      <dd><img src="<%= @profile.user_photo %>" class="img-responsive"></dd>

      <dt>Bio</dt>
      <dd><%= @profile.bio %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/profiles" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @profile.user %>
        <a href="/profiles/<%= @profile.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_profile/<%= @profile.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
